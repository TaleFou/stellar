.widget-wrapper.post-list .widget-body
  a
    line-height: 1
    font-size: $fs-14
    padding: 8px 16px
    display: block
    color: var(--text-p1)
  a+a
    margin-top: 2px
  a  
    display: flex
    justify-content: space-between
    align-items: center
    .title
      txt-ellipsis()
      border-bottom: 1px dashed var(--text-meta)
      padding-bottom: 2px
      trans1 border-bottom
      &:hover
        border-bottom: 1px solid $color-theme
    svg
      flex-shrink: 0
      height: 1em
      width: auto
      transform: scale(1.2)

.widget-wrapper.post-list
  .widget-body+.widget-header
    margin-top: 28px